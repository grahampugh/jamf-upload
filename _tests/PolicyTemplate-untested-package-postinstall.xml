<?xml version="1.0" encoding="UTF-8"?>
<policy>
	<general>
    <name>%POLICY_NAME% v%version%</name>
		<enabled>true</enabled>
		<frequency>Ongoing</frequency>
		<category>
			<name>%CATEGORY%</name>
		</category>
	</general>
  <scope>
    <computer_groups>
      <computer_group>
        <name>%POLICY_NAME% test users</name>
      </computer_group>
    </computer_groups>
    <exclusions>
      <computers/>
      <computer_groups>
        <computer_group>
          <name>%POLICY_NAME% test version installed</name>
        </computer_group>
      </computer_groups>
    </exclusions>
  </scope>
  <package_configuration>
    <packages>
      <size>1</size>
      <package>
        <name>%PKG_NAME%</name>
        <action>Install</action>
      </package>
    </packages>
  </package_configuration>
  <scripts>
    <size>1</size>
    <script>
      <name>%POSTINSTALL_SCRIPT_NAME%</name>
      <priority>After</priority>
      <parameter4/>
      <parameter5/>
      <parameter6/>
      <parameter7/>
      <parameter8/>
      <parameter9/>
      <parameter10/>
      <parameter11/>
    </script>
  </scripts>
 	<self_service>
		<use_for_self_service>true</use_for_self_service>
		<install_button_text>Install</install_button_text>
    <reinstall_button_text>Install</reinstall_button_text>
    <self_service_display_name>%POLICY_NAME% v%version%</self_service_display_name>
		<self_service_description>%SELF_SERVICE_DESCRIPTION%</self_service_description>
	</self_service>
  <files_processes>
    <search_by_path/>
    <delete_file>false</delete_file>
    <locate_file/>
    <update_locate_database>false</update_locate_database>
    <spotlight_search/>
    <search_for_process/>
    <kill_process>false</kill_process>
    <run_command/>
  </files_processes>
	<maintenance>
		<recon>true</recon>
	</maintenance>
</policy>
